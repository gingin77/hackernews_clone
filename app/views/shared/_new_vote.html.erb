<%= form_for(new_vote, url: votes_path, action: "create") do |f| %>
  <%= f.hidden_field :voteable_type, value: post.class %>
  <%= f.hidden_field :voteable_id, value: post.id %>
  <%= f.hidden_field :value, value: one %>
  <%= f.button type: 'submit', class: "button my-button clickable", id: direction do %>
    <%= tag.i class: "fa fa-chevron-circle-#{direction}" %>
  <% end %>
<% end %>
