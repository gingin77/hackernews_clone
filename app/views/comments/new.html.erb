<p><%= parent_comment.text %></p>
<%= form_for(comment, url: post_comments_path(parent_post.id), method: :post) do |f| %>
  <%= f.text_area :text %>
  <br />
  <%= f.hidden_field :post_id, :value => parent_post.id %>
  <%= f.hidden_field :comment_id, :value => parent_comment.id %>
  <% flash.each do |type, msg| %>
    <% if type.to_s == "inline" %>
      <%= content_tag(:div, msg, class: "alert alert-alert alert-inline") %>
    <% end %>
  <% end %>
  <%= f.submit "Submit Reply" %>
<% end %>
