<%= form_for(new_comment, url: comments_path, method: :post) do |form| %>
  <%= form.hidden_field :commentable_type, value: new_comment.commentable_type %>
  <%= form.hidden_field :commentable_id, value: new_comment.commentable_id %>
  <%= form.hidden_field :user_id, value: new_comment.user_id %>
  <%= form.text_area :text %>
  <br />
  <% flash.each do |type, msg| %>
    <% if type.to_s == "inline" %>
      <%= content_tag(:div, msg, class: "alert alert-alert alert-inline") %>
    <% end %>
  <% end %>
  <%= form.submit submit_text %>
<% end %>
