<h4 class="password">Forgot your password?</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "match-width" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "inputs_wide" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "inputs_wide" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
