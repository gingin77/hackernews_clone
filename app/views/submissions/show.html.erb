<div class="show_and_edit">
  <% if submission.text.blank? %>
    <div class="tabbed">
      <div class="label">title:</div>
      <div><%= submission.title %></div>
    </div>
    <div class="tabbed">
      <div class="label">link:</div>
      <div><%= link_to submission.url %></div>
    </div>
  <% else %>
    <div class="tabbed">
      <div class="label">text:</div>
      <div><%= submission.text %></div>
    </div>
  <% end %>
  <div class="tabbed">
    <div class="label">contributer:</div>
    <div><%= submission.user.name %></div>
  </div>
  <div class="tabbed">
    <div class="label">submitted at:</div>
    <div><%= time_ago_in_words(submission.created_at) %> ago </div>
  </div>
</div>
