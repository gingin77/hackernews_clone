<%= form_for parent.votes.build(value: 1) do |f| %>
  <%= f.hidden_field :voteable_type %>
  <%= f.hidden_field :voteable_id %>
  <%= f.hidden_field :value %>
  <%= f.button type: 'submit', class: "my-button clickable", id: "up" do %>
    <%= tag.i class: "fa fa-chevron-circle-up" %>
  <% end %>
<% end %>
<%= form_for parent.votes.build(value: -1) do |f| %>
  <%= f.hidden_field :voteable_type %>
  <%= f.hidden_field :voteable_id %>
  <%= f.hidden_field :value %>
  <%= f.button type: 'submit', class: "my-button clickable", id: "down" do %>
    <%= tag.i class: "fa fa-chevron-circle-down" %>
  <% end %>
<% end %>
