<%= comment.text %>
<% if user_signed_in? %>
  <%= link_to "Reply to #{comment.submitter.name}", comment_reply_path(comment) %>
<% end %>
<br />
<% if comment.comments.exists? %>
    <div class="replies-posted">
      <% comment.comments.each do |reply_comment| %>
        <%= render partial: "shared/comment", locals: { comment: reply_comment } %>
      <% end %>
  </div>
<% end %>
