<%= render partial: "post_presenter_show" %>
<%= render partial: "shared/comment/form_new", locals: { comments_parent: post, url: (post_comments_path(post)), submit_text: "Comment On Post" }  %>
<% if post.comments.exists? %>
  <div class="comments-posted">
    <% post.comments.each do |direct_comment| %>
      <% if direct_comment.id.present? %>
        <%= render partial: "shared/comment/presenter", locals: { comment: direct_comment } %>
      <% end %>
    <% end %>
  </div>
<% end %>
