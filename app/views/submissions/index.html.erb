<% posts.map do |post| %>
  <br />
  <% if post.url_submission? %>
    <%= link_to(post.title, post.url) %>
  <% else %>
    <%= post.text.truncate(80, {separator: ' '}) %>
  <% end %>
  <br />
  <p>by <%= link_to(post.user.name, user_path(post.user.name)) %> | posted <%= link_to(time_ago_in_words(post.created_at), submission_path(post.id)) %>  ago
  </p>
<% end %>
