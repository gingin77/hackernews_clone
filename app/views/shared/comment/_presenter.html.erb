<% present comment do |comment_presenter| %>

  <%= comment_presenter.text %>
  <%= comment_presenter.text_trailer %>

  <%= tag.div class: "vote_wrapper_comment" do %>
    <%= tag.div class: "vote_count_comment" do %>
      <%= comment_presenter.sum %>
    <% end %>
    <%= render partial: "shared/vote/presenter_index",
                        locals: { parent: comment } %>
  <% end %>

  <%= tag.br %>

  <% if comment_presenter.replies? %>
    <%= tag.div class: "replies-posted" do %>
      <% comment_presenter.replies.each do |reply_comment| %>
        <%= render partial: "shared/comment/presenter",
                            locals: { comment: reply_comment } %>
      <% end %>
    <% end %>
  <% end %>

<% end %>
