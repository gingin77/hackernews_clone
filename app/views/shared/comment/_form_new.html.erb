<%= form_for(commentable.comments.build) do |form| %>
  <%= form.hidden_field :commentable_type %>
  <%= form.hidden_field :commentable_id %>
  <%= form.text_area :text %>
  <br />
  <% flash.each do |type, msg| %>
    <% if type.to_s == "inline" %>
      <%= content_tag(:div, msg, class: "alert alert-alert alert-inline") %>
    <% end %>
  <% end %>
  <%= form.submit submit_text %>
<% end %>
