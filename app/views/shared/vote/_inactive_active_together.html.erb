<% if vote.present? %>
  <%= form_for(vote, url: vote_path(vote), action: "update") do |f| %>
    <%= f.hidden_field :value, value: one %>
    <%= f.button type: 'submit', class: "my-button #{vote.compare_types(b_vote_type)}clickable", id: b_vote_type, disabled: !parent.users_vote_on_post_exists?(current_user) do %>
      <%= tag.i class: "fa fa-chevron-circle-#{b_vote_type}" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_for parent.votes.build(value: one) do |f| %>
    <%= f.hidden_field :voteable_type %>
    <%= f.hidden_field :voteable_id %>
    <%= f.hidden_field :value %>
    <%= f.button type: 'submit', class: "my-button clickable", id: b_vote_type, disabled: parent.users_vote_on_post_exists?(current_user) do %>
      <%= tag.i class: "fa fa-chevron-circle-#{b_vote_type}" %>
    <% end %>
  <% end %>
<% end %>
